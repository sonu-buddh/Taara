<%= render :partial => "dashboard/header_title" %>
<div class="col-sm-offset-1">
  <table class="table table-hover" style=" width: 50%">
    <thead>

      <tr>
        <b>User List</b>
        <th>Image</th>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %><br>
        <% if u.id != current_user.id %>

          <tr>
            <td>
              <img alt="image" class="img-circle" <%= image_tag(u.avatar_url , size: "40x40") %>
            </td>

            <td>
              <% if u.name.present? %>
                <%= link_to u.name , profile_user_path(id: u.id) %>
              <% else %>
                <p>
                  NOT AVAILABLE
                </p>
              <% end %>
            </td>
            <td><%= u.email %></td>
            <td>
              <%= link_to "Delete", user_registration_path(id: u.id), :confirm => "Are you sure?", :method => :delete , class: 'btn btn-primary' %>
              <% if can? :update, @resource %>
                <%= link_to "Update", edit_user_registration_path(id: u.id) ,class: 'btn btn-primary' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @users , renderer: BootstrapPagination::Rails %>

</div>
