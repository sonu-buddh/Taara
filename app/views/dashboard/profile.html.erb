<ul>
	<h1 align="center">
		<b>MY BLOG</b>
	</h1>

	<p align="center">Welcome to the blog of Taara</p>

	<div class="w3-content" style="max-width: 1600px">
		<div class="w3-row col-md-offset-2">
			<div class="w3-col 5 s5 ">
				<div class="w3-card-4 w3-margin w3-white">
					<div class="w3-container ">
						<div class="wrapper wrapper-content">
							<div class="row animated fadeInRight">
								<div class="ibox float-e-margins">
									<div class="ibox-title">
										<div class="col-md-offset-1">
											<h5>Profile Detail</h5>
										</div>
			  							<img alt="image" class="img-responsive"  <%= image_tag @user.avatar_url, width: '100%' %>
									</div>

										<div class="col-md-offset-1">
											<table class="table">
											<tr>
											<div>
												<td><%= @user.name %></td>
											</div>
											<tr>
										</tr>
											<div>

												<td><%= @user.email %></td>
											</div>
										</tr>

										</table>
											<div class="col-md-3">
													<strong><%= current_user.posts.count %></strong>
														Posts
												</div>

												<div class="col-md-4">
													<strong><%= current_user.followings.count %></strong>
														Following
												</div>

												<div class="col-md-4">
													<strong><%= current_user.followers.count %></strong>
														Followers
												</div>
										</div>
								</div>
							</div>
			  		</div>
					</div>
				</div>
		  </div>
	  </div>
	</div>

<% if @user.posts.present? %>
   <div class="btn btn-default col-md-offset-9">
     <%= sort_link "created_at", "Order By" %>
   </div>
<% end %>
<% @posts.each do |p| %>
	<div class="w3-content" style="max-width:2000px" id="btn<%=p.id%>">
		<div class="w3-row col-md-offset-2">
			<div class="w3-col 14 s10 " >
				<div class="w3-card-4 w3-margin w3-white">
					<div class="w3-container  col-md-offset-1" >
						<div align="right" id="divbtn<%=p.id%>">
							<% if current_user.present? %>
  							<% if p.user == current_user || current_user.admin_role? %>
	    						<%= link_to edit_post_path(id: p.id),:method => :get, class: "btn btn-info btn-lg" do%> <i class="fa fa-edit"></i> <% end %>
			    				<%= link_to post_path(id: p.id),:method => :delete, remote: true,:confirm => "Are you sure?" , class: "btn btn-info btn-lg" do%> <i class="fa fa-trash"></i> <% end %>
					  		<% end %>
							<% end %>
									<% if current_user.present? %>
						    		<% if  p.favorite_lists.where(user_id: current_user.id ).count == 0 %>
							        <%= link_to favourite_post_path(post_id: p.id),remote: true , method: "post"  , class: "btn btn-info btn-lg" do%> <i class="glyphicon glyphicon-star icon-a" aria-hidden="true"></i> <% end %>
							      <% else %>
							        <%= link_to favourite_post_path(post_id: p.id),remote: true , method: "post"  , class: "btn btn-info btn-lg" do%> <i class="glyphicon glyphicon-star"></i> <% end %>
							      <% end %>

							    <% if  p.feedbacks.where(user_id: current_user.id ).count == 0 %>
							       <%= link_to feedbacks_like_path(post_id: p.id), remote: true , method: "post" , id: "likebtn#{p.id}", class: "btn btn-warning btn-lg icon-a"  do%> <i class="fas fa-heart" aria-hidden="true" ></i> <% end %>
							    <% else %>
							       <% if  p.feedbacks.where(user_id: p.id , like: true).count == 0 %>
							          <%= link_to feedbacks_like_path(post_id: p.id), remote: true , method: "post"  , id: "likebtn#{p.id}", class: "btn btn-warning btn-lg " do%> <i class="fas fa-heart" aria-hidden="true" ></i> <% end %>
      							<% else %>
			        					<%= link_to feedbacks_like_path(post_id: p.id), remote: true , method: "post"  , id: "likebtn#{p.id}", class: "btn btn-warning btn-lg icon-a" do%> <i class="fas fa-heart"></i> <% end %>
							    	<% end %>
								 <% end %>
							 <% end %>
						</div>
						<h3>
							<tr>
								<u>
									<%= link_to p.title, profile_user_path(id: p.id) %>
								</u>
						</h3>
						<div class="dropdown profile-element pmargin">
	  						<div class="col-md-3 pmargin">
								 <img alt="image" class="img-circle" <%= image_tag(p.user.avatar_url , size: "40x40") %>
								 <%= p.user.name %>
  	            </div>

						 <div class="col-md-3 pmargin">
								 <%= p.created_at.strftime("%d %b, %Y") %>
						 </div>
					 </div>

						<div class="col-md-12 pmargin">
							<p class="pmargin">
                <% if p.description.length > 250 %>
	                 <%= raw p.description.truncate(250) %>
                     <%= link_to '...Read more', '', class: "read-more-#{p.id} danger" %>
	             <script>
	                 	$('.read-more-<%= p.id %>').on('click', function(e) {
			                e.preventDefault()
			              $(this).parent().html('<%= escape_javascript raw(p.description)%>')
		                })
            	</script>
              <% else %>
		              <%= raw(p.description) %>
              <% end %>
					</p>
   			</div>
		</div>
  			<div class="w3-container  col-md-offset-1">
						<div class="w3-row">
								<%  p.tags.each do |tag| %>
                  <div class="button">
         	          <%=  render tag %>
                  </div>
   							<% end %>
						</div>
				</div>
		 </div>
	 </div>
 </div>
 </div>
<% end %>
