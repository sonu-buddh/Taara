<div class="col-lg-7">
	<div class="ibox float-e-margins">
		<div class="ibox-content">
			<div class="row">
				<div class="col-sm-6 col-sm-offset-1">
					<h3 class="m-t-none m-b">Forgot your password?</h3>
					<div class="form-group">

						<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
						<%= devise_error_messages! %>
						<%= f.label :email %><br/>
						<%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %><br>
						<%= f.submit "Send me reset password instructions", class: "btn btn-sm btn-primary pull-right m-t-n-xs" %>
					<% end %>
					<%= render "devise/shared/links" %>

				</div>
			</div>
		</div>
	</div>
</div>
</div>
