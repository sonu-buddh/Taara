
  <div class="w3-content" style="max-width:2000px">
    <div class="w3-row col-md-offset-2">
      <div class="w3-col 14 s10 " >
        <div class="w3-card-4 w3-margin w3-white">
          <div class="col-sm-offset-1">
            <table class="table" style=" width: 100%">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
              </tr>

                <% @users.each do |u| %><br>
                  <% if u.normal_user_role? %>
                    <% if u.id != current_user.id %>
                      <tr>
                        <td>
                          <% if u.name.present? %>
                            <%= link_to u.name , profile_user_path(id: u.id) %>
                          <% else %>
                            <p>
                              NOT AVAILABLE
                            </p>
                          <% end %>
                        </td>

                        <td>
                           <%= u.email %>
                        </td>

                        <td>
                          <% if @accepted.include?(u)%>
                            <%= link_to 'UnFollow',unfollow_path({to_id: u.id}),remote: true, id: "btn#{u.id}", method: "delete", class: "btn btn-outline btn-default"%>
                              <% elsif current_user.requested_by_me?(u) %>
                                <%= link_to "Revert Request", revert_path({to_id: u.id}),remote: true, id: "btn#{u.id}", method: "delete",class: "btn btn-outline btn-default"%>
                              <% else %>
                                <%= link_to "Follow", follows_path({to_id: u.id}),remote: true, id: "btn#{u.id}", method: "post",class: "btn btn-outline btn-default"%>
                              <% end %>
                            <% end %>
                        </td>
                     </tr>
                <% end %>
              <% end %>
            </table>
          </div>
        </div>
     </div>
  </div>
</div>
