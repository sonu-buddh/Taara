
if($("#btn<%=@pid%>").val() == 'Add to favourites')
  $("#btn<%=@pid%>").attr('value','Remove from favourites');
else if($("#btn<%=@pid%>").val() == 'Remove from favourites')
  $("#btn<%=@pid%>").attr('value','Add to favourites');
else if($("#btn<%=@pid%>").val() == 'Remove')
	$("#btn<%=@pid%>").remove();
